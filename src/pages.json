{
  "easycom": {
    "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/user/user",
      "style": {
        "navigationBarTitleText": "我的",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/news/news",
      "style": {
        "navigationBarTitleText": "资讯",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/study/study",
      "style": {
        "navigationBarTitleText": "学习",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/workGuide/workGuide",
      "style": {
        "navigationBarTitleText": "工作指南",
        "enablePullDownRefresh": false
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "泸州党建",
    "navigationBarBackgroundColor": "#CE1126",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "borderStyle": "white",
    "backgroundColor": "#F7F7F7",
    "color": "#000000",
    "selectedColor": "#CE1126",
    "list": [
      {
        "iconPath": "static/tabbar/index.png",
        "selectedIconPath": "static/tabbar/index-select.png",
        "text": "首页",
        "pagePath": "pages/index/index"
      },
      {
        "iconPath": "static/tabbar/news.png",
        "selectedIconPath": "static/tabbar/news-select.png",
        "text": "资讯",
        "pagePath": "pages/news/news"
      },
      {
        "iconPath": "static/tabbar/learn.png",
        "selectedIconPath": "static/tabbar/learn-select.png",
        "text": "学习",
        "pagePath": "pages/study/study"
      },
      {
        "iconPath": "static/tabbar/me.png",
        "selectedIconPath": "static/tabbar/me-select.png",
        "text": "我",
        "pagePath": "pages/user/user"
      }
    ]
  }
}
